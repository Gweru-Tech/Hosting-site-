<%- include('partials/header') %>

<section class="hero">
    <div class="container">
        <div class="hero-content">
            <h1>Premium Web Hosting Solutions</h1>
            <p>Fast, secure, and reliable hosting for your website. Get started today with 99.9% uptime guarantee.</p>
            <div class="hero-buttons">
                <a href="/pricing" class="btn btn-primary btn-lg">View Plans</a>
                <a href="/features" class="btn btn-secondary btn-lg">Learn More</a>
            </div>
        </div>
    </div>
</section>

<section class="features-section">
    <div class="container">
        <h2 class="section-title">Why Choose Us?</h2>
        <div class="features-grid">
            <div class="feature-card">
                <i class="fas fa-bolt"></i>
                <h3>Lightning Fast</h3>
                <p>SSD storage and optimized servers ensure your website loads in milliseconds.</p>
            </div>
            <div class="feature-card">
                <i class="fas fa-shield-alt"></i>
                <h3>Secure & Safe</h3>
                <p>Free SSL certificates, daily backups, and advanced security measures.</p>
            </div>
            <div class="feature-card">
                <i class="fas fa-headset"></i>
                <h3>24/7 Support</h3>
                <p>Our expert team is always available to help you with any issues.</p>
            </div>
            <div class="feature-card">
                <i class="fas fa-chart-line"></i>
                <h3>99.9% Uptime</h3>
                <p>Industry-leading uptime guarantee keeps your website always online.</p>
            </div>
            <div class="feature-card">
                <i class="fas fa-sync-alt"></i>
                <h3>Daily Backups</h3>
                <p>Automatic daily backups ensure your data is always protected.</p>
            </div>
            <div class="feature-card">
                <i class="fas fa-dollar-sign"></i>
                <h3>Best Pricing</h3>
                <p>Competitive pricing with no hidden fees. Get the best value for your money.</p>
            </div>
        </div>
    </div>
</section>

<section class="pricing-preview">
    <div class="container">
        <h2 class="section-title">Choose Your Perfect Plan</h2>
        <div class="pricing-grid">
            <% pricingPlans.forEach(plan => { %>
            <div class="pricing-card <%= plan.popular ? 'popular' : '' %>">
                <% if (plan.popular) { %>
                <div class="popular-badge">Most Popular</div>
                <% } %>
                <h3><%= plan.name %></h3>
                <div class="price">
                    <span class="currency">$</span>
                    <span class="amount"><%= plan.price %></span>
                    <span class="period">/month</span>
                </div>
                <ul class="features-list">
                    <% plan.features.forEach(feature => { %>
                    <li><i class="fas fa-check"></i> <%= feature %></li>
                    <% }); %>
                </ul>
                <a href="/pricing" class="btn <%= plan.popular ? 'btn-primary' : 'btn-secondary' %> btn-block">Get Started</a>
            </div>
            <% }); %>
        </div>
    </div>
</section>

<section class="cta-section">
    <div class="container">
        <h2>Ready to Get Started?</h2>
        <p>Join thousands of satisfied customers who trust us with their hosting needs.</p>
        <a href="/pricing" class="btn btn-primary btn-lg">Choose Your Plan</a>
    </div>
</section>

<%- include('partials/footer') %>
